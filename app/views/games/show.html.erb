<div class="booyah-box col-xs-6 col-xs-offset-3 text-center">
<div id="wrap">

  <h1>Game On!</h1><br />

  <h2><%= @game.name %></h2><br /> 
  <p>Black</p>
  <% if @game.player_black.nil? %>
  <% else %>
  <%= @game.player_black.email %>
  <% end %>
<table>
  <tbody>

    <% (0..7).each do |row| %>   
      <% if row.odd? %>
      
       <tr>         
        <% (0..7).each do |col| %> 
 	  <% if @pieces.select{|piece| (piece.row_pos == row && piece.col_pos == col)}.present? %>
	    <% piece = @pieces.select{|piece| (piece.row_pos == row && piece.col_pos == col)}[0] %></td>
	  <% end %>
	  <% if col.even? %>
            <td class="gray-space">
		<% if piece.present? %>	
  		  <%= link_to "#{piece_color(row,col)} #{piece.type}", select_piece_path(piece) %></td>
		<% end %>
          <% else %>             
            <td>
		<% if piece.present? %>	
                  <%= link_to "#{piece_color(row,col)} #{piece.type}", select_piece_path(piece) %></td>
		<% end %> 
          <% end %>        
        <% end %>  
      </tr>

      <% else %>

      <tr> 
        
        <% (0..7).each do |col| %>
                <td class="gray-space">
                  <%= piece_color(row,col) %>
                  <%= selected_piece(row,col) %>
                </td>
              <% else %>


            <td class="gray-space"> 
		<% if piece.present? %>	
               
  		  <%= link_to "#{piece_color(row,col)} #{piece.type}", select_piece_path(piece) %></td>
  		
		<% end %>

          <% else %>
              
            <td> 
		<% if piece.present? %>	
                 
  		  <%= link_to "#{piece_color(row,col)} #{piece.type}", select_piece_path(piece) %></td>
		  
		<% end %> 
          <% end %>
        <% end %>  
      </tr>
      

  </tbody>
</table>
<br /><br />

<p>White</p>
<%= @game.player_white.email %>

</div>
</div>
