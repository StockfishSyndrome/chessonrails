<div class="booyah-box col-xs-6 col-xs-offset-3 text-center">
<div id="wrap">
 
  <h1>Game On!</h1><br />
  <h2><%= @game.name %></h2><br />

  <p>Black</p>
  <% if @game.player_black.nil? %>
  <% else %>
  <%= @game.player_black.email %>
  <% end %>
<table>
  <tbody>
    <% (0..7).each do |row| %>   
      <% if row.odd? %>
      
       <tr>         
        <% (0..7).each do |col| %>
          <% if col.even? %>
            <td class="gray-space">
              <%= piece_color(row,col) %>
              <%= selected_piece(row,col) %>
            </td>
          <% else %>             
            <td>
              <%= piece_color(row,col) %>
              <%= selected_piece(row,col) %>
            </td>
          <% end %>        
        <% end %>  
      </tr>

      <% else %>

      <tr> 
        
        <% (0..7).each do |col| %>

          <% if col.odd? %>

            <td class="gray-space">
              <%= piece_color(row,col) %>
              <%= selected_piece(row,col) %>
            </td>
          
          <% else %>
              
            <td>
              <%= piece_color(row,col) %>
              <%= selected_piece(row,col) %>
            </td>

          <% end %>
        <% end %>  
      </tr>
      

      <% end %>
    <% end %>  
   
  </tbody>
</table>
<br /><br />

<p>White</p>
<%= @game.player_white.email %>

</div>
</div>